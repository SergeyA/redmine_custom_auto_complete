<style type="text/css">
    .custom-ac-input {
        width: 150px;
        margin-rigth: 10px;
    }
    
    .custom-ac-label {
        margin-rigth: 10px;
        font-weight: bold;
    }
    
    span.custom-ac-label {
        margin-left: 20px;
    }
    
    .custom-css-input {
        min-height: 200px;
    }    
</style>

<% 4.times do |idx| %>
    <p>
      <label class='custom-ac-label'>Поле для автозаполнения: </label>
      <%= text_field_tag 'settings[acfield'+idx.to_s+']', @settings['acfield'+idx.to_s], class: "custom-ac-input" %>&nbsp;
      <span class='custom-ac-label'>Источник: </span>
      <%= text_field_tag 'settings[acsource'+idx.to_s+']', @settings['acsource'+idx.to_s] %>
      <span class='custom-ac-label'>Значения: </span>
      <%= text_field_tag 'settings[acvalues'+idx.to_s+']', @settings['acvalues'+idx.to_s] %>
    </p>
<% end %>

<p>
  <label>Пользовательские CSS стили</label>
  <br/>
  <%= text_area_tag 'settings[css]', @settings['css'] %>
</p>
